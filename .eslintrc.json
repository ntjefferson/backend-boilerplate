{
    "env": {
        "node": true,
        "commonjs": true,
        "es2020": true,
        "mocha": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 11
    },
    "rules": {
        "linebreak-style": 0,
        "no-underscore-dangle": "off",
        "class-methods-use-this": "off",
        "no-unused-vars": ["error", { "argsIgnorePattern": "next" }]
    }
}
